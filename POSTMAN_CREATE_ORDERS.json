{
  "info": {
    "name": "Online Marketplace - Create Orders",
    "description": "Collection to create test orders for seller products",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "buyerToken",
      "value": ""
    },
    {
      "key": "productId1",
      "value": ""
    },
    {
      "key": "productId2",
      "value": ""
    },
    {
      "key": "productId3",
      "value": ""
    },
    {
      "key": "orderId1",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "1. Setup - Get All Products",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save first 3 product IDs for orders",
              "if (pm.response.code === 200) {",
              "    var products = pm.response.json();",
              "    if (products.length > 0) {",
              "        pm.collectionVariables.set('productId1', products[0]._id);",
              "    }",
              "    if (products.length > 1) {",
              "        pm.collectionVariables.set('productId2', products[1]._id);",
              "    }",
              "    if (products.length > 2) {",
              "        pm.collectionVariables.set('productId3', products[2]._id);",
              "    }",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/public/products",
          "host": ["{{baseUrl}}"],
          "path": ["public", "products"]
        }
      }
    },
    {
      "name": "2. Setup - Register Buyer",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Mike Johnson\",\n  \"email\": \"mike@customer.com\",\n  \"password\": \"buyer123\",\n  \"role\": \"buyer\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "3. Setup - Login Buyer",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    pm.collectionVariables.set('buyerToken', jsonData.token);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"mike@customer.com\",\n  \"password\": \"buyer123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "4. Create Order - Single Product",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    var jsonData = pm.response.json();",
              "    pm.collectionVariables.set('orderId1', jsonData._id);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{buyerToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"items\": [\n    {\n      \"product\": \"{{productId1}}\",\n      \"quantity\": 1\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/buyer/orders",
          "host": ["{{baseUrl}}"],
          "path": ["buyer", "orders"]
        }
      }
    },
    {
      "name": "5. Create Order - Multiple Products",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{buyerToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"items\": [\n    {\n      \"product\": \"{{productId1}}\",\n      \"quantity\": 2\n    },\n    {\n      \"product\": \"{{productId2}}\",\n      \"quantity\": 1\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/buyer/orders",
          "host": ["{{baseUrl}}"],
          "path": ["buyer", "orders"]
        }
      }
    },
    {
      "name": "6. Create Order - Large Quantity",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{buyerToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"items\": [\n    {\n      \"product\": \"{{productId2}}\",\n      \"quantity\": 5\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/buyer/orders",
          "host": ["{{baseUrl}}"],
          "path": ["buyer", "orders"]
        }
      }
    },
    {
      "name": "7. Create Order - Mixed Products",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{buyerToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"items\": [\n    {\n      \"product\": \"{{productId1}}\",\n      \"quantity\": 1\n    },\n    {\n      \"product\": \"{{productId2}}\",\n      \"quantity\": 2\n    },\n    {\n      \"product\": \"{{productId3}}\",\n      \"quantity\": 1\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/buyer/orders",
          "host": ["{{baseUrl}}"],
          "path": ["buyer", "orders"]
        }
      }
    },
    {
      "name": "8. View Buyer Orders",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{buyerToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/buyer/orders",
          "host": ["{{baseUrl}}"],
          "path": ["buyer", "orders"]
        }
      }
    },
    {
      "name": "9. View Specific Order",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{buyerToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/buyer/orders/{{orderId1}}",
          "host": ["{{baseUrl}}"],
          "path": ["buyer", "orders", "{{orderId1}}"]
        }
      }
    },
    {
      "name": "BONUS - Register Another Buyer",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sarah Williams\",\n  \"email\": \"sarah@example.com\",\n  \"password\": \"sarah123\",\n  \"role\": \"buyer\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "BONUS - Login Second Buyer",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    pm.collectionVariables.set('buyerToken', jsonData.token);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"sarah@example.com\",\n  \"password\": \"sarah123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "BONUS - Create Orders from Second Buyer",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{buyerToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"items\": [\n    {\n      \"product\": \"{{productId3}}\",\n      \"quantity\": 3\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/buyer/orders",
          "host": ["{{baseUrl}}"],
          "path": ["buyer", "orders"]
        }
      }
    }
  ]
}
