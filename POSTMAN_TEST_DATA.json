      "name": "1. Setup - Register Seller",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save the user ID if registration is successful",
              "if (pm.response.code === 201) {",
              "    var jsonData = pm.response.json();",
              "    pm.collectionVariables.set(\"sellerId\", jsonData.id);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Tech Store Owner\",\n  \"email\": \"seller@techstore.com\",\n  \"password\": \"seller123\",\n  \"role\": \"seller\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "register"]
        }
      }
    },
